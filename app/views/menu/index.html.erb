<% if current_user.present? %>
<p>Dobre doshul</p>
<% else %>
<div>
<%= form_for("user", :url => user_session_path) do |f| %> 
        <%= f.email_field :email, :autofocus => true, :class => "vhod", :placeholder => "Електронна поща" %>
        <%= f.password_field :password, :class => "vhod" ,:placeholder => "Парола" %>
        <%= f.check_box :remember_me %>
        <label> Запомни ме </label>
       <input type="submit" value="Вход", class="orange button"> 
    <% end %>
 </div>
 <div>
  <h2>Регистрация</h2>
        <%= form_for(resource, :as => resource_name,  :url => registration_path(resource_name), :html => { :class => "hash"}) do |f| %>
            <%= devise_error_messages! %>
              <%= f.text_field :name, :autofocus => true, :placeholder => "Име и фамилия", :class => "reg" %> 
              <%= f.email_field :email, :autofocus => true, :placeholder=>"Електронна поща", :class => "reg" %>
              <%= f.password_field :password, :placeholder=> "Парола", :class => "reg" %>
              <%= f.password_field :password_confirmation, :placeholder=>"Повтори парола", :class => "reg" %>
              <input type="submit" value="Регистрирай се!">
          <% end %>
  </div>
 <% end %>